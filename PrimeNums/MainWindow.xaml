<Window x:Class="PrimeNums.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PrimeNums"
        mc:Ignorable="d"
        Title="MainWindow" Height="224.547" Width="417.79" Background="black">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="N"/>
            <TextBox x:Name="TBn"/>
            <Label Content="a"/>
            <TextBox x:Name="TBa"/>
            <Label Content="b"/>
            <TextBox x:Name="TBb"/>
            <Button x:Name="BtnCalculate" Content="Расчитать" Click="BtnCalculate_Click" FontSize="14"/>
        </StackPanel>

        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label x:Name="LblOut"/>
        </StackPanel>
    </Grid>
</Window>
